{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "(lldb) Launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "cwd": "${fileDirname}",
            "stopOnEntry": true,
            "preLaunchTask": "build makefile"
        },
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/server",
            "args": [
                
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build makefile"
        },

        {
            "name": "(gdb) Launch wclient",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/wclient",
            "args": [
                "${input:hostname}",
                "${input:portNumber}",
                "list",
                "${input:threads}"
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build OSTEP (client/server)",
        },
        {
            "name": "(gdb) Launch wserver",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/wserver",
            "args": [
                "-t",
                "${input:threads}",
                "-b",
                "${input:BufferSize}",
                "-s",
                "${input:schedalg}"
            ],
            "stopAtEntry": true,
            "logging": {
                "engineLogging": true
            },
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build OSTEP (client/server)",
        }
    ],

    "inputs": [
        {
            "type": "promptString",
            "id": "hostname",
            "description": "what is the hostname?",
            "default": "localhost"
        },
        {
            "type": "promptString",
            "id": "portNumber",
            "description": "Port number?",
            "default": "10000"
        },
        {
            "type": "promptString",
            "id": "threads",
            "description": "How many Threads?",
            "default": "1"
        },
        {
            "type": "pickString",
            "id": "schedalg",
            "description": "which algo (FIFO/SFF)",
            "options": [
                "SFF",
                "FIFO"
            ],
            "default": "FIFO"
        },
        {
            "type": "promptString",
            "id": "BufferSize",
            "description": "BufferSize in server?",
            "default": "10"
        }
    ]
}