{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "build OSTEP (client/server)",
			"command": "cd ${fileDirname}; make",
			"group": "build",
			"problemMatcher": "$gcc"
		},
		{
			"type": "shell",
			"label": "C/C++: gcc-7 build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-g",
				"-Wall",
				"-pthread",
				"-Werror",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}